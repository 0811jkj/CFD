FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 2 -1 0 0 0 0 ];

internalField   uniform 0.0000001;

boundaryField
{

    inlet
    {
      type	calculated;
      value	uniform 0.171;
    }

    outlet
    {
      type	zeroGradient;
    }

    wing
    {
	//type            nutkWallFunction;
      type	nutLowReWallFunction;
      value	uniform 1e-10;
    }
    sym1
    {
      type	symmetryPlane;
    }
    sym2
    {
      type	symmetryPlane;
    }
}


